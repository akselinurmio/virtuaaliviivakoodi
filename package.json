{
  "name": "virtuaaliviivakoodi",
  "version": "2.0.0",
  "description": "Creates the numeral value of Finnish bank transfer barcode",
  "keywords": [
    "pankkiviivakoodi",
    "bank transfer",
    "wire transfer"
  ],
  "type": "module",
  "module": "./dist/esm/index.js",
  "main": "./dist/cjs/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": "./dist/esm/index.js",
    "default": "./dist/cjs/index.js"
  },
  "files": [
    "./dist/cjs",
    "./dist/esm",
    "./dist/index.d.ts"
  ],
  "engines": {
    "node": ">=12",
    "npm": ">=6.14.17"
  },
  "devDependencies": {
    "esbuild": "^0.25.2",
    "prettier": "^3.5.3",
    "tap": "^21.1.0",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "esbuild src/index.js --bundle --outdir=dist/cjs --platform=node --target=node12",
    "build:esm": "esbuild src/index.js --bundle --outdir=dist/esm --platform=neutral",
    "build:types": "tsc src/index.js --allowJs --declaration --emitDeclarationOnly --outDir ./dist",
    "check-formatting": "prettier --check '*.json' '*.md' 'src' '.github/workflows'",
    "test": "npm run -s check-formatting && tap 'src/*.test.js'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akselinurmio/virtuaaliviivakoodi.git"
  },
  "author": "Akseli Nurmio <akseli@nurmio.fi> (https://akselinurmio.fi)",
  "license": "MIT",
  "homepage": "https://github.com/akselinurmio/virtuaaliviivakoodi",
  "bugs": "https://github.com/akselinurmio/virtuaaliviivakoodi/issues",
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
