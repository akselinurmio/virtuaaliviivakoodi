{
  "name": "virtuaaliviivakoodi",
  "version": "1.1.0",
  "description": "Creates the numeral value of Finnish bank transfer barcode",
  "keywords": [
    "pankkiviivakoodi",
    "bank transfer",
    "wire transfer"
  ],
  "main": "./src/index.js",
  "types": "./src/index.d.ts",
  "dependencies": {
    "iban": "0.0.12"
  },
  "devDependencies": {
    "@semantic-release/git": "^7.0.18",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "1.18.2",
    "semantic-release": "^15.14.0",
    "tap": "^14.10.7"
  },
  "scripts": {
    "lint": "prettier --check ./{,src/}*.{js,json,md,ts}",
    "test": "npm run -s lint && tap src/*.test.js",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akselinurmio/virtuaaliviivakoodi.git"
  },
  "author": "Akseli Nurmio <akseli@nurmio.fi> (https://akselinurmio.fi)",
  "license": "MIT",
  "homepage": "https://github.com/akselinurmio/virtuaaliviivakoodi",
  "bugs": "https://github.com/akselinurmio/virtuaaliviivakoodi/issues",
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/npm",
      "@semantic-release/git",
      [
        "@semantic-release/github",
        {
          "failTitle": false
        }
      ],
      "@semantic-release/release-notes-generator"
    ]
  },
  "tap": {
    "check-coverage": true
  }
}
